<script>
  // Skill filtering functionality
  function filterSkills(category) {
    const skillItems = document.querySelectorAll('.skill-item');
    const filterButtons = document.querySelectorAll('.skill-filter');
    
    // Update active filter button
    filterButtons.forEach(button => {
      button.classList.toggle('active', button.innerText.toLowerCase() === category);
      if (button.classList.contains('active')) {
        button.classList.add('bg-blue-600', 'text-white');
        button.classList.remove('bg-blue-100', 'text-blue-600');
      } else {
        button.classList.remove('bg-blue-600', 'text-white');
        button.classList.add('bg-blue-100', 'text-blue-600');
      }
    });
    
    // Filter skills
    skillItems.forEach(item => {
      if (category === 'all' || item.dataset.category === category) {
        item.style.display = 'block';
      } else {
        item.style.display = 'none';
      }
    });
  }

  // Resume download functionality
  function downloadResume() {
    // Create a form to handle the download
    const form = document.createElement('form');
    form.method = 'GET';
    form.action = '/download_resume';
    document.body.appendChild(form);
    form.submit();
    document.body.removeChild(form);
  }

  // Badges system
  function updateBadges() {
    const badges = JSON.parse(localStorage.getItem('badges') || '[]');
    const badgesContainer = document.getElementById('badgesContainer');
    
    const allBadges = {
      'explorer': { title: 'Explorer', icon: '🗺️', description: 'Visited all pages' },
      'konami': { title: 'Code Master', icon: '🎮', description: 'Found the Konami Code' },
      'night-owl': { title: 'Night Owl', icon: '🦉', description: 'Used dark mode' },
      'social': { title: 'Social Butterfly', icon: '🦋', description: 'Generated QR code' }
    };
    
    badgesContainer.innerHTML = '';
    
    Object.entries(allBadges).forEach(([key, badge]) => {
      const hasEarned = badges.includes(key);
      badgesContainer.innerHTML += `
        <div class="relative group">
          <div class="p-3 rounded-lg ${hasEarned ? 'bg-gradient-to-br from-yellow-100 to-yellow-200' : 'bg-gray-100'} flex flex-col items-center justify-center transition-transform transform hover:scale-105">
            <span class="text-2xl ${hasEarned ? '' : 'opacity-50'}">${badge.icon}</span>
            <span class="text-sm font-semibold mt-1 ${hasEarned ? 'text-gray-800' : 'text-gray-400'}">${badge.title}</span>
          </div>
          <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-1 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
            ${badge.description}
          </div>
        </div>
      `;
    });
  }

  // Check for explorer badge
  function checkExplorerBadge() {
    const visitedPages = JSON.parse(localStorage.getItem('visitedPages') || '[]');
    const currentPage = window.location.pathname;
    
    if (!visitedPages.includes(currentPage)) {
      visitedPages.push(currentPage);
      localStorage.setItem('visitedPages', JSON.stringify(visitedPages));
      
      // If visited all main pages
      const mainPages = ['/', '/about', '/projects', '/contact'];
      if (mainPages.every(page => visitedPages.includes(page))) {
        const badges = JSON.parse(localStorage.getItem('badges') || '[]');
        if (!badges.includes('explorer')) {
          badges.push('explorer');
          localStorage.setItem('badges', JSON.stringify(badges));
          updateBadges();
        }
      }
    }
  }

  // Check for night owl badge when dark mode is used
  document.getElementById('theme-toggle').addEventListener('click', function() {
    const badges = JSON.parse(localStorage.getItem('badges') || '[]');
    if (!badges.includes('night-owl')) {
      badges.push('night-owl');
      localStorage.setItem('badges', JSON.stringify(badges));
      updateBadges();
    }
  });

  // Initialize badges
  updateBadges();
  checkExplorerBadge();

  // Fetch latest GitHub commits
  async function fetchLatestCommits() {
    try {
      const username = 'Deepanhp';
      const response = await axios.get(`https://api.github.com/users/${username}/events/public`);
      const pushEvents = response.data.filter(event => event.type === 'PushEvent').slice(0, 3);
      
      const commitsContainer = document.getElementById('latestCommits');
      commitsContainer.innerHTML = `
        <h4 class="font-semibold text-gray-700">Latest Activity</h4>
        <div class="space-y-3">
          ${pushEvents.map(event => `
            <div class="text-sm">
              <div class="font-medium text-gray-900">${event.repo.name}</div>
              <div class="text-gray-600">${event.payload.commits[0].message}</div>
              <div class="text-gray-400 text-xs">${new Date(event.created_at).toLocaleDateString()}</div>
            </div>
          `).join('')}
        </div>
      `;
    } catch (error) {
      console.error('Error fetching commits:', error);
    }
  }

  // Fetch commits on page load
  fetchLatestCommits();
</script>
